<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio01.MainPage">

    <Border
        Stroke="Purple"
        StrokeThickness="5"
        StrokeShape="RoundRectangle 40,40,0,0"
        Margin="15">
        <VerticalStackLayout
            Spacing="25"
            HorizontalOptions="Center"
            VerticalOptions="Center">
            <Button Text="Boton 1" 
                    BorderWidth="5" 
                    BorderColor="Black" 
                    Padding="10" 
                    />
            <Button Text="Boton 2" 
                    />
            <Button Text="Boton 3" 
                    />

            <HorizontalStackLayout MinimumWidthRequest="200">
                <Label Text="Nombre:"
                       Margin="10"/>
                <Entry Placeholder="PLEISJOLDER"
                       MinimumWidthRequest="220"
                       BackgroundColor="AliceBlue"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Border>

</ContentPage>
