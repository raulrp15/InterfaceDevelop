<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vmodel="clr-namespace:PersonasApi.ViewModels"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="PersonasApi.MainPage">

    <ContentPage.BindingContext>
        <vmodel:vmListaPersonas />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">

            <Button Text="Cargar Personas" Command="{Binding LoadCommand}" />
            
            <ActivityIndicator IsRunning="{Binding IsLoading}" 
                               IsVisible="{Binding IsLoading}" 
                               HorizontalOptions="Center" 
                               VerticalOptions="Center" />

            <ListView ItemsSource="{Binding ListadoPersonasEdad}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <HorizontalStackLayout Padding="10" Spacing="5">
                                <Label Text="{Binding Persona.Nombre}" FontSize="16" />
                                <Label Text="{Binding Edad}" FontSize="14" TextColor="Gray" Margin="10,0,0,0" />
                            </HorizontalStackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>