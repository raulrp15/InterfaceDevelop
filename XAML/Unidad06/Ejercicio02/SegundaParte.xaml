<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio02.NewPage1"
             Title="NewPage1">
    <VerticalStackLayout
        Padding="30"
        Spacing="25">

        <ActivityIndicator x:Name="aidCargaBarra"
                           BindingContext="{x:Reference swtCambiaBarra}"
                           IsRunning="{Binding Path= IsToggled}"/>
        <Switch x:Name="swtCambiaBarra"
                IsToggled="False"/>

    </VerticalStackLayout>
</ContentPage>